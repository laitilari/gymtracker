<p id="notice"><%= notice %></p>

<h1>Listing Results</h1>

<table>
  <thead>
    <tr>
      <th>Move</th>
      <th>User</th>
      <th>Weight</th>
      <th>Reps</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= link_to result.move.name, result.move %></td>
        <td><%= result.user.username %></td>
        <td><%= result.weight %></td>
        <td><%= result.reps %></td>
        <td><%= link_to 'Show', result %></td>
        <% if result.user == current_user %>

        <td><%= link_to 'Edit', edit_result_path(result) %></td>
        <td><%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_result_path %>
